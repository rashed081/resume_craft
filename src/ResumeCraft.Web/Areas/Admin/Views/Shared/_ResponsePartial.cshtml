@using ResumeCraft.Web.Utilities;
@if (TempData.Peek<ResponseModel>("ResponseMessage") != null)
{
    var response = TempData.Get<ResponseModel>("ResponseMessage");
    <div class="alert alert-dismissible bg-light-@(response.Type.ToString().ToLower()) d-flex flex-center flex-column py-10 px-10 px-lg-20 mb-10">
        <!--begin::Close-->
        <button type="button" class="position-absolute top-0 end-0 m-2 btn btn-icon btn-icon-@(response.Type.ToString().ToLower())" data-bs-dismiss="alert">
            <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
        </button>
        <!--end::Close-->
        <!--begin::Icon-->
        <i class="ki-duotone ki-information-5 fs-5tx text-@(response.Type.ToString().ToLower()) mb-5"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
        <!--end::Icon-->
        <!--begin::Wrapper-->
        <div class="text-center">
            <!--begin::Title-->
            <h1 class="fw-bold mb-5">@response.Title</h1>
            <!--end::Title-->
            <!--begin::Separator-->
            <div class="separator separator-dashed border-@(response.Type.ToString().ToLower()) opacity-25 mb-5"></div>
            <!--end::Separator-->
            <!--begin::Content-->
            <div class="mb-9 text-dark">
                @response.Message
            </div>
            <!--end::Content-->
            <!--begin::Buttons-->
            <div class="d-flex flex-center flex-wrap">
                <button href="#" class="btn btn-@(response.Type.ToString().ToLower()) m-2" data-bs-dismiss="alert">Ok, I got it</button>
            </div>
            <!--end::Buttons-->
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Alert-->
}
