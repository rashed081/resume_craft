@using ResumeCraft.Domain.Entities.EnumCollections;
@using ResumeCraft.Web.Areas.Admin.Models;
@model AdminUpdateModel
@{
    ViewData["Title"] = "Edit";
}

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div class="w-lg-600px p-10 p-lg-15 mx-auto shadow-sm rounded">
        <!--begin::Form-->
        <form class="form w-100" id="sign_up_form" asp-antiforgery="true" asp-area="admin" asp-action="edit" asp-controller="profile" method="post">
            
            <!--begin::Heading-->
            <div class="mb-10 text-center">
                <!--begin::Title-->
                <h1 class="text-dark mb-3">
                    Edit Profile
                </h1>
                <a asp-action="changePassword" asp-area="" asp-controller="account">Change password</a>
            </div>
            <!--end::Heading-->
            <!--begin::Action-->
            <!--end::Separator-->
            <!--begin::Input group-->
            <div class="row fv-row mb-7">
                <!--begin::Col-->
                <div class="col-xl-6">
                    <label class="form-label fw-bold text-dark fs-6">First Name</label>
                    <input class="form-control form-control-lg form-control-solid" type="text" asp-for="FirstName" autocomplete="off" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-6">
                    <label class="form-label fw-bold text-dark fs-6">Last Name</label>
                    <input class="form-control form-control-lg form-control-solid" type="text" asp-for="LastName" autocomplete="off" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
         
            <!--end::Input group-->
            <div class="fv-row mb-7">
                <label class="form-label fw-bold text-dark fs-6">Phone</label>
                <input class="form-control form-control-lg form-control-solid" type="text" asp-for="PhoneNumber" autocomplete="off" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="fv-row mb-7">
                <label class="form-label fw-bold text-dark fs-6">Gender</label>
                <select class="form-select form-control form-control-lg form-control-solid" aria-label="Default select example" asp-for="Gender">
                    <option selected>Select gender</option>
                    <option value="@Gender.Male">@Gender.Male.ToString()</option>
                    <option value="@Gender.Female">@Gender.Female.ToString()</option>
                    <option value="@Gender.Other">@Gender.Other.ToString()</option>
                </select>
                
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="fv-row mb-7">
                <label class="form-label fw-bold text-dark fs-6">Date of birth</label>
                <input class="form-control form-control-lg form-control-solid" placeholder="Pick a date" id="birthDate" asp-for="DateOfBirth" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            @* <div class="fv-row mb-10">
            <label class="form-check form-check-custom form-check-solid form-check-inline">
            <input class="form-check-input" type="checkbox" name="toc" value="1" />
            <span class="form-check-label fw-semibold text-gray-700 fs-6">
            I Agree
            <a href="#" class="ms-1 link-primary">Terms and conditions</a>.
            </span>
            </label>
            </div> *@
            <!--end::Input group-->
            <!--begin::Actions-->
            <div class="text-center">
                <button type="submit" id="kt_sign_up_submit" class="btn btn-lg btn-primary">
                    <span class="indicator-label">Submit</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
            <!--end::Actions-->
        </form>
        <!--end::Form-->
    </div>
</div>
@section Scripts {
    <script>
        $("#birthDate").flatpickr();
    </script>
    <partial name="_ValidationScriptsPartial" />
    <partial name="_RecaptchaScriptPartial">
    }


