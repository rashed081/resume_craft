@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AccountLayout";
}

<div class="w-lg-500px p-10 p-lg-15 mx-auto">
    <form class="form w-100" method="post" asp-antiforgery="true" asp-area="" asp-controller="Account" asp-action="ResetPassword">

        <div class="text-center mb-10">
            <!--begin::Title-->
            <h1 class="text-dark mb-3">@ViewData["Title"]</h1>
            <!--end::Title-->
            <!--begin::Link-->
            <div class="text-gray-400 fw-semibold fs-5">
                You already have reset your password ?
                <a href="../Account/Login" class="link-primary fw-bold">Sign in</a><hr>
            </div>
            <!--end::Link-->
        </div>

        <!--begin::Status Message-->
        <partial name="_StatusMessage" for="StatusMessage" />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <!--end::Status Message-->
        <!--begin::Hidden Input-->
        <input asp-for="Email" type="hidden" id="username" />
        <input asp-for="Token" type="hidden" id="authtoken" />
        <!--end::Hidden Input-->
        <!--begin::Input group-->
        <div class="fv-row mb-10">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control form-control-solid" type="password" aria-required="true" placeholder="Enter new password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="fv-row mb-10">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control form-control-solid" type="password" aria-required="true" placeholder="Confirm new password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <!--end::Input group-->
        <!--begin::Actions-->
        <div class="text-center mb-10">
            <button type="submit" class="w-100 btn btn-lg btn-success" style="background-color: #FF914D; color: #FFFFFF;">Reset Password</button>
        </div>
        <!--end::Actions-->
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
