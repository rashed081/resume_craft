                                <!--begin::Resumes-->
                                <div class="card card-xxl-stretch">
                                    <!--begin::Card header-->
                                    <div class="card-header">
                                        <h3 class="card-title align-items-start flex-column">
                                            <span class="card-label fw-bolder text-dark">Manage Resume</span>
                                        </h3>
                                        <div class="card-toolbar">
                                            <a href="#" class="btn btn-light">See Templates</a>
                                            @*												<a href="#" class="btn text-white" style="background-color: #FF914D;">Manage Resume</a>
                                            *@
                                        </div>
                                    </div>
                                    <!--end::Card header-->
                                    <!--begin::Card body-->
                                    <div class="card-body">
                                        <!--begin::Calendar-->
                                        <div id="" style="height: 400px">

                                            <div class="container">

                                                <div class="row">
                                                    @foreach(var resume in Model)
                                                    {
                                                        <div class="col-md-2">
                                                            <div class="card shadow">
                                                                <div class="card-body">
                                                                    @if (resume.Contact != null && !string.IsNullOrWhiteSpace(resume.Contact.Value.FirstName))
                                                                    {
                                                                        <h5 class="card-title">@resume.Contact.Value.FirstName</h5>
                                                                    }
                                                                    else
                                                                    {
                                                                        <h5 class="card-title">Untitiled</h5>
                                                                    }
                                                                    <p class="card-text"></p>
                                                                    <div class="btn-group dropup">
                                                                        <button type="button" class="btn btn-secondary" data-bs-toggle="dropdown" aria-expanded="false">
                                                                            :
                                                                        </button>
                                                                        <ul class="dropdown-menu">
                                                                            <li><a class="dropdown-item" asp-action="Edit" asp-controller="Resume" asp-route-resumeId="@resume.Id">Edit</a></li>
                                                                            <li><a class="dropdown-item" href="#">Share</a></li>
                                                                            <li><a class="dropdown-item" asp-action="DeleteResume" asp-controller="Resume" asp-route-id="@resume.Id">Delete</a></li>
                                                                        </ul>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    }

                                                </div>
                                            </div>
